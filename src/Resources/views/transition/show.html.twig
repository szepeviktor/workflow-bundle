{% extends 'baseMet.html.twig' %}
{% import "macros/elements.html.twig" as elements %}

{% block body %}
{% embed "include/embed/portlet.html.twig" with { portlet_title: 'Transition'} %}
    {% block portlet_body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transition.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ transition.name }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('workflow_workflow_show', {id: transition.workflow.id}) }}">back to workflow</a>
      {% endblock %}
{% endembed %}

{% embed "include/embed/portlet.html.twig" with { portlet_title: 'Event Definitions'} %}
    {% block portlet_body %}
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>EventName</th>
                <th>Sortorder</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event_definition in transition.eventDefinitions %}
                <tr>
                    <td>{{ event_definition.id }}</td>
                    <td>{{ event_definition.name }}</td>
                    <td>{{ event_definition.eventName }}</td>
                    <td>{{ event_definition.sortorder }}</td>
                    <td>
                        <a href="{{ path('workflow_transition_event_definition_show', {'id': event_definition.id}) }}">show</a>
                        <a href="{{ path('workflow_transition_event_definition_edit', {'id': event_definition.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('workflow_transition_event_definition_new', {transition: transition.id}) }}">Create new</a>

    <a href="{{ path('workflow_workflow_show', {id: transition.workflow.id}) }}">back to workflow</a>


    {% endblock %}
{% endembed %}

{% endblock %}
